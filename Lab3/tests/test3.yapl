class Arithmetic inherits Object {
    add(x : Int, y : Int) : Int {
            x + y;
    };
    
    subtract(x : Int, y : Int) : Int {
            x - y;
    };

    multiply(x : Int, y : Int) : Int {
            x * y;
    };

    divide(x : Int, y : Int) : Int {
            if y = 0 then 
                abort() 
            else 
                x / y 
            fi;
            
            while x 
            loop 
                y / x 
            pool;
    };
};